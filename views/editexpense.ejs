<!DOCTYPE html>
<html>
  <style>
    input[type=text],
    select {
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }

    input[type=submit] {
      width: 40%;
      background-color: #4CAF50;
      color: white;
      padding: 14px 20px;
      margin: 8px 0;
      border: none;
      border-radius: 4px;
      margin: 0px auto;
      float: center;
      align: center;
      cursor: pointer;
    }

    input[type=submit]:hover {
      background-color: #45a049;

    }

    div {
      border-radius: 5px;
      background-color: #f2f2f2;
      padding: 20px;
      width: 60%;
      align: center;
      float: center;
      margin: 0px auto
    }
  </style>

  <body>

    <h2 align="center">Edit your Expense</h2>

    <div>
      <form action="/expense/<%=usersExpense.id%>/edit" method="post">
        
        <label for="expenseid">Expenses</label>
        <select id="expense.name" name="expenseId">
          <% expense.forEach(function (expense){  %>
            <option name="expenseid" value="<%=expense.id%>"><%=expense.name%></option>
            <% })  %>
          </select>
        <label for="amount">Amount</label>
        <input type="text" id="amount" name="amount" value="<%=usersExpense.amount%>" placeholder="input amount..">

          <input type="submit" value="EDIT ">
      </form>
    </div>

  </body>

</html>